{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node src/scripts/seed.ts",
    "postinstall": "prisma generate",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate && npm run prisma:seed",
    "test:supabase-auth": "ts-node -r tsconfig-paths/register scripts/test-supabase-auth.ts",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:server": "node scripts/start-server.js",
    "start:clean": "npm run start:server",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config=jest-e2e.config.js --detectOpenHandles --forceExit",
    "typeorm": "ts-node -P tsconfig.orm.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm migration:generate src/database/migrations/$npm_config_name -- -d ormconfig-migration.ts",
    "migration:create": "npm run typeorm migration:create src/database/migrations/$npm_config_name",
    "migration:run": "npm run typeorm migration:run -- -d ormconfig-migration.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ormconfig-migration.ts",
    "migration:show": "npm run typeorm migration:show -- -d ormconfig-migration.ts",
    "schema:sync": "npm run typeorm schema:sync -- -d ormconfig-migration.ts",
    "schema:drop": "npm run typeorm schema:drop -- -d ormconfig-migration.ts",
    "seed:ipd": "ts-node src/ipd-management/seed/ipd-seed.ts",
    "seed:opd": "ts-node src/opd-management/seed/opd-seed.ts",
    "migration:generate:manual": "ts-node scripts/generate-migration.ts",
    "supabase:migrate": "ts-node scripts/apply-supabase-migration.ts"
  },
  "dependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.15.0",
    "@sendgrid/mail": "^8.1.5",
    "@supabase/supabase-js": "^2.57.4",
    "@types/cookie-parser": "^1.4.9",
    "@types/pg": "^8.11.11",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.2",
    "exceljs": "^4.4.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "node-cron": "^4.2.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "razorpay": "^2.9.6",
    "stripe": "^18.5.0",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.8.2",
    "typeorm": "^0.3.26",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@golevelup/ts-jest": "^0.7.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.1.6",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/moment": "^2.11.29",
    "@types/node": "^22.18.8",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.5",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.1.3",
    "prettier": "^3.4.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.20.0",
    "prisma": "^6.15.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
