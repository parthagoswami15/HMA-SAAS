# ====================
# STAGING ENVIRONMENT
# ====================

# Server Configuration
NODE_ENV=staging
PORT=10000

# Database - Supabase PostgreSQL
DATABASE_URL=postgresql://postgres:your-db-password@db.your-project-id.supabase.co:5432/postgres

# JWT Configuration (Generate strong secrets!)
JWT_SECRET=your-staging-jwt-secret-at-least-64-chars-long-random-string
JWT_EXPIRES_IN=1d
JWT_ACCESS_SECRET=your-staging-access-secret
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=your-staging-refresh-secret
JWT_REFRESH_EXPIRATION=7d

# Security
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS (Staging URLs)
CORS_ORIGINS=https://your-frontend-staging.vercel.app,http://localhost:3000

# File Uploads
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email (Test SMTP or SendGrid)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-password
SMTP_FROM="HMS SaaS Staging <noreply@staging.yourdomain.com>"

# Frontend URLs (Staging)
FRONTEND_URL=https://your-frontend-staging.vercel.app
RESET_PASSWORD_URL=https://your-frontend-staging.vercel.app/reset-password

# Redis (optional)
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=

# Sentry (Error Tracking)
SENTRY_DSN=

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# App Configuration
APP_NAME="HMS SaaS - Staging"
APP_VERSION=1.0.0-staging
APP_URL=https://your-backend-staging.onrender.com

# Logging
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=logs/app.log

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=api-docs